<%= form_with(model: blog_post) do |form| %>
  <% if blog_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(blog_post.errors.count, "error") %> prohibited this blog_post from being saved:</h2>

      <ul>
        <% blog_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label(:author, style: "display: block") %>
    <%= form.select :author_id, Author.all.collect { |p| [ p.name, p.id ] } %>
  </div>

  <div>
    <%= form.label(:title, style: "display: block") %>
    <%= form.text_field(:title) %>
  </div>

  <div>
    <%= form.label(:content, style: "display: block") %>
    <%= form.text_area(:content, rows: 10, cols: 100) %>
  </div>

  <div>
    <%= form.label(:published_at, style: "display: block") %>
    <%= form.datetime_field(:published_at) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
